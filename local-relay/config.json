{
  "server": {
    "port": 8080,
    "host": "localhost",
    "read_timeout": "30s",
    "write_timeout": "30s",
    "idle_timeout": "120s",
    "max_header_bytes": 1048576,
    "enable_tls": false,
    "tls_cert": "",
    "tls_key": "",
    "cors_origins": [
      "http://localhost:3000",
      "tauri://localhost"
    ],
    "max_connections": 1000
  },
  "crypto": {
    "layer_c_private_key_hex": "",
    "layer_c_public_key_hex": "",
    "key_rotation_interval": "30m",
    "session_timeout": "24h",
    "max_sessions": 10000,
    "secure_random_source": "/dev/urandom",
    "constant_time_ops": true
  },
  "shuttle": {
    "url": "https://shuttle.example.com",
    "api_key": "",
    "timeout": "30s",
    "retry_attempts": 3,
    "retry_delay": "1s",
    "max_retry_delay": "10s",
    "health_check_interval": "30s",
    "circuit_breaker": {
      "enabled": true,
      "failure_threshold": 5,
      "recovery_timeout": "60s",
      "max_concurrency": 100
    }
  },
  "security": {
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 60,
      "burst_size": 10,
      "cleanup_interval": "5m"
    },
    "allowed_clients": [],
    "require_client_certs": false,
    "max_frame_size": 2097152,
    "max_session_age": "24h",
    "enable_metrics": true,
    "metrics_path": "/metrics"
  },
  "logging": {
    "level": "info",
    "format": "json",
    "output": "stdout",
    "max_size_mb": 100,
    "max_backups": 3,
    "max_age_days": 28,
    "compress": true
  }
}