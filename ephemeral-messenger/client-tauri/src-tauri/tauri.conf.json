{
  "productName": "Secure Messaging & Document Suite",
  "version": "1.0.0",
  "identifier": "com.securemessaging.suite",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Secure Messaging & Document Suite",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "script-src": "'self' 'unsafe-inline'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' data: blob:",
        "connect-src": "'self' ws://localhost:*",
        "font-src": "'self'",
        "object-src": "'none'",
        "base-uri": "'self'",
        "form-action": "'self'"
      },
      "dangerousDisableAssetCspModification": false,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "title": "Secure Messaging"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "rpm"],
    "category": "Utility",
    "copyright": "Copyright (c) 2024 Secure Messaging Team",
    "shortDescription": "Secure messaging and document editing suite",
    "longDescription": "Zero-persistence secure messaging and encrypted document editing with triple encryption and hardware token support",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": ["tor", "libsodium23", "libc6"]
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "hardenedRuntime": true,
      "entitlements": "entitlements.plist"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "shell": {
      "all": false,
      "open": true
    },
    "dialog": {
      "all": false,
      "open": true,
      "save": true
    },
    "fs": {
      "all": false,
      "readFile": true,
      "writeFile": true,
      "readDir": false,
      "copyFile": false,
      "createDir": false,
      "removeDir": false,
      "removeFile": true,
      "renameFile": false,
      "exists": true,
      "scope": ["$DOCUMENT/*", "$DOWNLOAD/*", "$HOME/.secure-messaging/*"]
    }
  }
}