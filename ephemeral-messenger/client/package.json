{
  "name": "ephemeral-messenger-client",
  "version": "1.0.0",
  "description": "Zero-persistence encrypted messaging client",
  "main": "src/main/main.ts",
  "author": "Ephemeral Messenger Project",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "electron-forge start",
    "build": "electron-forge make",
    "build:reproducible": "npm run clean && npm ci --production && electron-forge make --arch=x64",
    "clean": "rm -rf dist/ out/ node_modules/.cache",
    "test": "jest",
    "test:crypto": "jest --testPathPattern=crypto",
    "test:security": "jest --testPathPattern=security",
    "lint": "eslint src/ --ext .ts,.tsx",
    "format": "prettier --write src/",
    "sign": "./scripts/sign-binary.sh",
    "verify": "./scripts/verify-binary.sh"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@electron-forge/plugin-fuses": "^7.2.0",
    "@electron-forge/plugin-webpack": "^7.2.0",
    "@electron/fuses": "^1.6.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "css-loader": "^6.8.1",
    "electron": "^28.1.0",
    "eslint": "^8.0.0",
    "eslint-plugin-import": "^2.28.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^9.0.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.5.0",
    "node-loader": "^2.0.0",
    "prettier": "^3.0.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "webpack": "^5.88.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "@reduxjs/toolkit": "^2.0.0",
    "react-redux": "^9.0.0",
    "libsodium-wrappers": "^0.7.11",
    "node-forge": "^1.3.1",
    "qrcode": "^1.5.3",
    "qrcode-reader": "^1.0.4",
    "jsqr": "^1.4.0",
    "argon2": "^0.31.2",
    "tweetnacl": "^1.0.3",
    "age-encryption": "^0.1.0"
  },
  "optionalDependencies": {
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.ephemeral-messenger.client",
    "productName": "Ephemeral Messenger",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Network",
      "synopsis": "Zero-persistence encrypted messaging"
    },
    "win": {
      "target": "nsis",
      "arch": ["x64"]
    },
    "mac": {
      "target": "dmg",
      "arch": ["x64", "arm64"]
    }
  }
}